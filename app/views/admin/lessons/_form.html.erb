<div class='pt-40 text-center grid-cols-6 gap-4'>
  <div class='text-2xl'>
    <%= title %>
  </div>

  <div class='col-start-2 col-span-4'>
    <%= form_with(model: lesson, url: url) do |form| %>
      <div class='mt-4'>
        <%= t('platform.lesson.fields.lesson_classes') %> <br />
        <%= form.collection_select :lesson_class_id, LessonClass.all, :id, :title, { include_blank: t('blank.content') }, { required: true, value: lesson.lesson_class_id } %>
      </div>

      <div class='mt-4'>
        <%= t('platform.lesson.fields.title') %> <br />
        <%= form.text_field :title, value: lesson.title, required: true %>
      </div>

      <div class='mt-4'>
        <%= t('platform.lesson.fields.description') %>

        <div class='text-left'>
          <%= form.rich_text_area :description, value: lesson.description %>
        </div>
      </div>

      <div class='mt-4'>
        <%= t('platform.lesson.fields.video') %> <br />
        <%= form.text_field :video_url, value: lesson.video_url %>
      </div>

      <div class='mt-4 text-2xl'>
        <%= form.submit t('platform.lesson.fields.save'), class: 'cursor-pointer hover:underline' %>
      </div>
    <% end %>
  </div>

  <div class='mt-10'>
    <%= render partial: 'shared/components/back_button', locals: { path: admin_home_index_path } %>
  </div>
</div>
