<div class="grid grid-cols-3 text-center pt-60">
  <div class="col-span-3 flex items-center justify-center">
    <div class='shadow-xl shadow-white/30 p-10 rounded-xl bg-gray-900'>
      <h2><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field mt-5">
          <%= f.label t('user.fields.email') %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field mt-5">
          <%= f.label t('user.fields.name') %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field mt-5">
          <%= f.label t('user.fields.password') %> <i>(<%= t('t.user.fields.blank') %>)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mt-5">
          <%= f.label t('user.fields.password_confirmation') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Update", class: 'cursor-pointer hover:underline' %>
        </div>
      <% end %>
    </div>
  </div>
</div>